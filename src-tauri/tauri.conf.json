{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pomodoro",
  "version": "0.1.0",
  "identifier": "com.yuki.pomodoro",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "",
        "maximizable": false,
        "hiddenTitle": true,
        "width": 350,
        "height": 500,
        "minWidth": 220,
        "minHeight": 400,
        "maxWidth": 420,
        "maxHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
